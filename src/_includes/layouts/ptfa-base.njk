{% set css %}
  {% include "styles/ptfa.css" %}
{% endset %}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | Warboys Primary Academy PTFA</title>
  <style>
    {{ css | cssmin | safe }}
  </style>
</head>
<body>

  <header class="ptfa-header">
    <nav class="ptfa-nav">
      <div class="ptfa-logo">
        <a href="/ptfa">
          <img src="/images/ptfa-logo.svg" alt="Warboys Primary Academy PTFA Logo" class="ptfa-logo-img">
          Warboys PTFA
        </a>
      </div>
      <button class="ptfa-nav-toggle" aria-label="Open navigation menu">
        <span class="hamburger-bar"></span>
        <span class="hamburger-bar"></span>
        <span class="hamburger-bar"></span>
      </button>
      <div class="ptfa-nav-links">
        <ul>
          <li><a href="/ptfa/fundraising">Support Us</a></li>
          <li><a href="/ptfa/events">Events</a></li>
          <li><a href="/ptfa/uniform">Uniform Shop</a></li>
          <li><a href="/ptfa/get-involved">Get Involved</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <main class="ptfa-main">
    {{ content | safe }}
  </main>

  <footer class="ptfa-footer">
    <p>&copy; 2025 Warboys Academy PTFA. All rights reserved.</p>
    <p>Registered charity no. 1027410 in England and Wales.</p>
  </footer>

  <script>
    const navToggle = document.querySelector('.ptfa-nav-toggle');
    const navLinks = document.querySelector('.ptfa-nav-links');

    navToggle.addEventListener('click', () => {
      navToggle.classList.toggle('active');
      navLinks.classList.toggle('active');
    });
  </script>

</body>
</html>
